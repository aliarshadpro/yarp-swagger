<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net9.0;net10.0;</TargetFrameworks>
		<PackageId>Treyt.Yarp.ReverseProxy.Swagger</PackageId>
		<Version>3.10.0</Version>
		<Authors>Andrei Tsaregorodtsev</Authors>
		<Contributors>Ali Arshad</Contributors>
		<PackageProjectUrl>https://github.com/aliarshadpro/yarp-swagger</PackageProjectUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Duende.AccessTokenManagement" Version="4.1.0" />
		<PackageReference Include="Microsoft.OpenApi" Version="3.2.0" />
		<PackageReference Include="Microsoft.OpenApi.YamlReader" Version="2.0.0-preview.14" />
		<PackageReference Include="Swashbuckle.AspNetCore.SwaggerGen" Version="10.1.0" />
		<PackageReference Include="Yarp.ReverseProxy" Version="2.3.0" Condition="'$(TargetFramework)' == 'net8.0'  or '$(TargetFramework)' == 'net9.0' or '$(TargetFramework)' == 'net10.0' " />
	</ItemGroup>

</Project>
